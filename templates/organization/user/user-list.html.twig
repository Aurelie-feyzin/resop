{% extends 'organization/base.html.twig' %}

{% block body %}
    <h1>Utilisateurs - {{ organization }}</h1>

    <table class="table table-striped mt-5">
        <thead>
            <tr>
                <th>NIVOL</th>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th>E-mail</th>
                {% if organization.parent is null %}
                    <th>Structure</th>
                {% endif %}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.identificationNumber }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.emailAddress }}</td>
                    {% if organization.parent is null %}
                        <td>{{ user.organization.name }}</td>
                    {% endif %}
                    <td><a href="{{ path('organization_user_edit', { 'id': user.id }) }}">Modifier</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
