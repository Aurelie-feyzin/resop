{% extends 'organization/base.html.twig' %}

{% block title %}Espace structure{% endblock %}

{% block body %}
    <h1>Véhicules</h1>

    <ul class="list-group list-group-flush mb-4">
        {% for asset in assets %}
        <li class="list-group-item list-group-item-action">
            <div class="d-flex justify-content-between align-items-center">
                <span>{{ asset }}</span>
                <span>
                    <button class="btn btn-outline-secondary" role="button" disabled>Modifier</button>
                    <button class="btn btn-outline-primary" role="button" disabled>Mettre à jour les disponibilités</button>
                </span>
            </div>
        </li>
        {% endfor %}
    </ul>

    <p><a class="btn btn-primary" href="{{ path('app_organization_commissionable_add_asset') }}" role="button">Ajouter un nouveau véhicule</a></p>
{% endblock %}
